{
  "name": "Tashgeel",
  "version": "1.0.0",
  "description": "Offline POS System with license activation and multi-language support",
  "author": "itqan",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.Tashgeel.pos",
    "productName": "Tashgeel By itqan",
    "copyright": "Â© 2025 itqan",
    "files": [
      "**/*",
      "!dist",
      "!*.zip"
    ],
    "asarUnpack": [
      "node_modules/node-machine-id/**"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "node-machine-id": "^1.1.12"
  }
}
